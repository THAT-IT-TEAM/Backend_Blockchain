# API Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-secret-key-here
NODE_HANDLER_URL=http://localhost:3000

# Database Configuration (if applicable)
# DATABASE_URL=postgresql://user:password@localhost:5432/blockchain

# Next.js Dashboard Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_NODE_HANDLER_URL=http://localhost:3000
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_DEFAULT_ADMIN_EMAIL=admin@blockchain.com

# Ganache Configuration (if needed)
GANACHE_PORT=7545
GANACHE_NETWORK_ID=1337

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session (for production)
# SESSION_SECRET=your-session-secret-here
# COOKIE_DOMAIN=.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window

# Security (for production)
# HELMET_ENABLED=true
# CORS_ENABLED=true
# RATE_LIMIT_ENABLED=true

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
